<div class="cont row">
  <div class="left eight columns">
    <h4>Create Event</h4>
    <form>

      <div class="columns">
        <label for="title">Title</label>
        <input class="u-full-width" type="text" placeholder="Football at the beach" id="title">
      </div>

      <label for="desc">Describe Event</label>
      <textarea class="u-full-width" placeholder="Details â€¦" id="desc"></textarea>


      <h5>Event Options</h5>
      <div class="row">
        <div class='six columns'>
          <label for="exampleEmailInput">Where</label>
          <input class="u-full-width" type="email" placeholder="test@mailbox.com" id="exampleEmailInput">
        </div>
        <div class='six columns'>
          <label for="exampleEmailInput">Date</label>
          <input class="u-full-width" type="date" placeholder="test@mailbox.com" id="exampleEmailInput">
        </div>
      </div>

      <div class="row">

        <div class='six columns'>
          <label for="exampleEmailInput">Start Time</label>
          <input class="u-full-width" type="time" placeholder="test@mailbox.com" id="exampleEmailInput">
        </div>

        <div class='six columns'>
          <label for="exampleEmailInput">End Time</label>
          <input class="u-full-width" type="time" placeholder="test@mailbox.com" id="exampleEmailInput">
        </div>


      </div>

      <div class="row">
        <label class="six columns">
          <input type="checkbox">
          <span class="label-body">Notify Followers</span>
        </label>

        <label class="six columns">
          <input type="checkbox">
          <span class="label-body">Auto Accept</span>
        </label>
      </div>

      <div class="row">
        <div class="six columns">
          <label>Total People can come
            <input type="number" class='u-full-width' />
          </label>
        </div>
        <div class="six columns">
          <label>You / Your Group Size
            <input type="number" class='u-full-width' />
          </label>
        </div>
      </div>
      <input class="button-primary" type="submit" value="Submit">

      <div class="row">
        <label>Tags</label>
        <ul id="myTags" class="tagit ui-widget ui-widget-content ui-corner-all">
        </ul>
      </div>
    </form>
  </div>
